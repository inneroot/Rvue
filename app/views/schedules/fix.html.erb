<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Saints</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr style="background-color: #eee;">
        <td><span style="color:<%=schedule.color %>; background-color: #ccc;"><%= schedule.day %></span></td>
        <td><%= sanitize schedule.saints %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add', new_schedule_path %>